@model List<_20232121_W2052838_PlanitGreen.Models.Booking>

@{
    ViewData["Title"] = "Departure Bookings";
    var departureId = ViewData["DepartureId"];
}

<h2 style="color:#0A504C;">Bookings for Departure #@departureId</h2>

@if (Model.Count == 0)
{
    <p>No bookings found for this departure.</p>
}
else
{
    foreach (var booking in Model)
    {
        <div class="card my-3 p-3 shadow-sm">
            <h5>User: @booking.User.FirstName @booking.User.LastName | Booking ID: @booking.BookingID</h5>
            <p><strong>Passengers:</strong> @booking.PassengerQty | <strong>Eco Points Used:</strong> @booking.EcoPointsUsed | <strong>Total Price:</strong> $@booking.TotalPrice</p>
            <p><strong>Transport:</strong> @(booking.IsPublicTransport ? "Public" : "Private")</p>

            <h6>Passenger Details:</h6>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Meal Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in booking.PassengerList)
                    {
                        <tr>
                            <td>@p.FirstName</td>
                            <td>@p.LastName</td>
                            <td>@p.MealType</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
